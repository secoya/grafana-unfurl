{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": ["es2017"],
		"baseUrl": ".",
		"outDir": "./dist",
		"jsx": "react",
		"importHelpers": true,
		"resolveJsonModule": true,
		"strict": true,
		"declaration": false,
		"sourceMap": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "Node",
		"paths": {
			"src/*": ["./src/*"]
		}
	},
	"include": ["src/**/*.ts"]
}
